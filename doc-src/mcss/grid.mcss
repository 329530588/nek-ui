html, body {height: 100%;}

// Grid
.g-top {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    z-index: 5;
    height: $m-navbar_height;
    background: $m-navbar_background;
}

.g-top-fixed {
    position: fixed;
}

.g-topc {
    width: 1000px;
    margin: 0 auto;
}

.g-hd {
    $box-sizing: border-box;
    padding-top: $m-navbar_height;
    height: 100%;
    background: $m-navbar_background;
}

.g-hdc {
    width: 1000px;
    margin: 0 auto;
}

.g-top-fixed + .g-bd {
    margin-top: $m-navbar_height;
}

.g-bdc {
    width: 1000px;
    margin: 0 auto;
    padding: 40px;
}

.g-bdc-index {
    // margin: 30px auto;
}

.g-bd-dark {
    background: #eee;
}

.g-sd {
    width: 249px;
    float: left;
    min-height: 400px;
    border-right: 1px solid #f4f4f4;
    margin-bottom: 60px;
    padding-top: 54px;
}

.g-mn {
    margin-left: 40px;
    margin-bottom: 120px;
    width: 1000px - 250px - 40px;
    float: right;
}

.g-ft {
    clear: both;
    height: 200px;
    background: $m-navbar_background;
}