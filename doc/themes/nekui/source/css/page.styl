@import "_common"
@import "_header"
@import "_sidebar"

#header
    border-bottom 1px $border-color solid
    transition background-color .3s ease-in-out

.content
    position relative
    padding 2.2em 0
    max-width 1000px
    margin 0 auto
    font-size 12px
    &.api
        > a:first-of-type > h2
            margin-top 0
            padding-top: 0
    a.button
        font-size .9em
        color #fff
        margin .2em 0
        width 180px
        text-align center
        padding 12px 24px
        display inline-block
        vertical-align middle
    img
        max-width 100%
    span.light
        color $light
    span.info
        font-size .85em
        display inline-block
        vertical-align middle
        width 280px
        margin-left 20px
    h1
        margin 0 0 1em
    > h1
        font-family: PingFangTC-Medium;
        font-size: 20px;
        color: #333;
        border-bottom: 1px solid #E1E6EC;
        margin: 40px 0px;
    h2, h3
        &:before
            content ''
            display block
            margin-top -1 * $heading-link-padding-top
            height $heading-link-padding-top
            visibility hidden
    a>h2
        &:before
            margin-top: 0px;
            height: 0px;
        z-index: -1;
        font-family: PingFangTC-Medium;
        font-size: 16px;
        color: #333333;
        line-height: 22px;
        height: 22px;
        border-left: 3px solid #333;
        border-bottom: none;
        padding: 0px 8px;
        margin: 23px 0px;
    h2
        font-family: PingFangTC-Medium;
        font-size: 16px;
        color: #333333;
        padding: 0px 8px;
        border-left: 3px solid #333;
        height: 20px;
        line-height: 20px;
        z-index: -1;
        &:before
            margin-top 0px
            height 0px
    h3
        margin $h3-margin-top 0 1.2em
        position relative
        z-index: -1
        font-size: 12px;
        margin: 0px 22px;
        &:after
            content "#"
            color $link
            position absolute
            left -0.7em
            bottom -2px
            font-size 1.2em
            font-weight bold
    figure
        margin 1.2em 0
    a
        color $link
        font-weight 400
    blockquote
        margin 2em 0
        padding-left 20px
        border-left 4px solid $theme
        p
            font-weight 600
            margin-left 0
    iframe
        margin 1em 0
    > table
        margin: 0px 22px;
        border 2px solid $white
        td, th
            line-height 1.6em
            padding .5em 1.4em
            border none
        tr
            &:nth-child(2n-1)
                background: #fff;
            &:nth-child(2n)
                background: #f6f9fc;
        td
            border-bottom: 1px solid #ecf2f9;
        th
            background-color: #eef1f4
            border-bottom: 1px solid #ecf2f9;
            color: #666666
            text-align left
    > p
        margin: 0px 22px;
    > dl
        margin: 0px 22px;
    p.tip
        padding 12px 24px 12px 30px
        margin 2em 0
        border-left 4px solid $red
        background-color $codebg
        position relative
        border-bottom-right-radius $radius
        border-top-right-radius $radius

        &:before
            position absolute
            top 14px
            left -12px
            background-color $red
            color #fff
            content "!"
            width 20px
            height 20px
            border-radius 100%
            text-align center
            line-height 20px
            font-weight bold
            font-family $logo-font
            font-size 14px

        code
            background-color #efefef

        em
            color $medium
.guide-links
    margin-top 2em
    border-top 1px solid #e5e5e5
    display flex

    .placeholder
        flex: 1

    .pager
        margin 2em 0

        span
            display inline-block
            vertical-align middle

        .icon
            width 18px
            height 18px
            border-radius 50%
            border 1px solid #ccc
            background-position center center
            background-repeat no-repeat
            background-size 10px

        .icon-left
            background-image url(../images/arrow-left.png)
            margin-right 5px

        .icon-right
            background-image url(../images/arrow-right.png)
            margin-left 5px

.footer
    color $light
    padding-top 2em
    border-top 1px solid #e5e5e5
    font-size .9em

#main.fix-sidebar
    .sidebar
        position fixed

@media screen and (min-width: 1590px)
    #header
        background-color rgba(255,255,255,.4)

@media screen and (max-width: 1500px)
    .content.with-sidebar
        margin-left 280px
    #ad
        z-index 7
        position relative
        padding 0
        bottom 0
        right 0
        float right
        padding 0 0 20px 30px

@media screen and (max-width: 900px)
    body
        -webkit-text-size-adjust none
        font-size 14px
    #header
        display none
    #logo
        display none
    .nav-link
        padding-bottom 1px
        &:hover, &.current
            border-bottom 2px solid $theme
    #mobile-bar
        display block
    #main
        padding 2em 1.4em 0
    .highlight pre
        padding 1.2em 1em
    .content
        &.with-sidebar
            margin auto
        h2, h3
            &:before
                content ''
                display block
                margin-top -1 * $mobile-heading-link-padding-top
                height $mobile-heading-link-padding-top
                visibility hidden
    .footer
        margin-left 0
        text-align center

@media screen and (max-width: 560px)
    #downloads
        text-align center
        margin-bottom 25px
        .info
            margin-top 5px
            margin-left 0
    iframe
        margin: 0 !important
