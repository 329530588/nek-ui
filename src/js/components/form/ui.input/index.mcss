.u-input {
    display: block;
    position: relative;
    width: $u-formctrl_width;
    height: $u-formctrl_height;

    .input{
        padding: $u-formctrl_padding;
        color: $u-formctrl_color;
        background: $u-formctrl_background;
        $border-radius: $border-radius-base;
        border: 1px solid #EEEEEE;
        height: $height-base;
        line-height: $height-base;
        font-size: $font-size-sm;
        width: 100%;
        $placeholder({
            color: #999;
            font-size: $font-size-sm;
            // - Removes placeholder transparency in Firefox.
            $opacity: 1;
        });

        &:focus {
            outline: 0;
            background: $u-formctrl-focus_background;
            color: $u-formctrl-focus_color;
            $border: $u-formctrl-focus_border;
        }

        &:disabled {
            cursor: not-allowed;
            background: $u-formctrl-disabled_background;
            color: $u-formctrl-disabled_color;
            $border: $u-formctrl-disabled_border;
        }
    }

    .input_unit,.input_icon {
        position: absolute; height:24px;
        right: 10px; top:0; bottom:0; margin:auto;
        color:#666;
    }
    .input_icon { font-size:14px; }
    .input_icon:hover, .input2_icon:active { color:$brand-primary; cursor:pointer; }

    .input_placeholder {
        position: absolute;
        left: 0;
        top: 0;
        bottom: 0;
        color: $u-formctrl_placeholder_color;
        padding: $u-formctrl_padding;
        border-left: 1px solid transparent;
    }
}

.u-input-sm {
    height: 26px;
    .input{
        height: 26px;
        line-height: 26px;
    }
}

.u-input-block {
    display: block;
    width: 100%;
}

.u-input + .u-tip {
    margin-left: 5px;
}