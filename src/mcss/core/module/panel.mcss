// Component:       `m-panel`
// ========================================================================

.m-panel {
    .panel_hd, .panel_ft {
        background: $panel-header;
        padding: 8px 10px;
    }
    .panel_ft {
        padding:5px 10px;
    }

    .panel_bd {
        padding: 20px 0;
    }

    .panel_img {

    }
}

// Color Extends:
// ========================================================================

$m-panel-extend_color = ($name, $background, $color = null, $border_ = null) {
    .m-panel-#{$name} {
        @if($border_) {border-color: $border_;}

        .panel_hd {
            background: $background;
            @if($color) {color: $color;}
            @if($border_) {border-color: $border_;}
        }
    }
}