// Component:       `m-toolbar`
// ========================================================================

.m-toolbar {
    @extend .f-lsn;
    $clearfix();

    > li {
        float: left;

        > a, > span {
            display: block;
            text-decoration: none;
        }
    }

    > li:hover {
        > a {}
    }
}