// Component:       `u-formitem`
// ========================================================================

.u-formitem {
    display: flex;
    
    .formitem_tt { position:relative; }
}

.u-formitem-block {
    display:flex;
    $clearfix();

    .formitem_tt {
        display: block;
        min-width: 150px;
        padding-right:10px;
        padding-top:5px;
        text-align: right;
    }
    @media only screen and (max-width: 1600px) {
      .formitem_tt {
        min-width: 80px;
      }
    }

    .formitem_ct {
        flex: 1;
        display: block; 
    }
}

.u-formitem-column{
    flex-direction: column;
    .formitem_tt{
        text-align: left !important;
        padding: 0;
        font-size: 12px;
    }
}