// Component:       `u-tip`
// ========================================================================

.u-tip {
    position:absolute;
	margin-top:5px;
}


// Color Extends:
// ========================================================================

$u-tip-extend_color = ($name, $background, $color) {
    .u-tip-#{$name} {
        background: $background;
        color: $color;
    }
}