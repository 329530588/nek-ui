@import "../../core/module/toolbar.mcss";

// Component:       `m-toolbar`
// ========================================================================

.m-toolbar {
    background: #f4f4f4;

    > li {
        > a, > span {
            padding: 2px 12px;
            color: #555;

            small {font-size: 60%; color: #999;}
        }
    }

    > li:hover {
        > a {
            background: #e8e8e8;
        }
    }
    
    > li.z-crt {
        > a {
            background: #f0f0f0;
        }
    }
}