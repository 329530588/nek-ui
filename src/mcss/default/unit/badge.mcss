@import "../../core/unit/badge.mcss";



// Component:       `u-badge`
// ========================================================================

.u-badge {
    padding: 0 5px;
    line-height: 14px;
    background: #00a8e6;
    color: white;
    font-size: 12px;
    font-weight: bold;
}

/* Hover */
a.u-badge:hover {
    color: white;
}



// Color Extends:
// ========================================================================

$u-badge-extend_color(info, $brand-info);
$u-badge-extend_color(success, $brand-success);
$u-badge-extend_color(warning, $brand-warning);
$u-badge-extend_color(error, $brand-error);